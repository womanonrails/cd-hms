<%- model_class = Hardware -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @hardware.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serial_number) %>:</strong></dt>
  <dd><%= @hardware.serial_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:warranty_expired_on) %>:</strong></dt>
  <dd><%= @hardware.warranty_expired_on %></dd>

  <dt><strong><%= t('.size') %>:</strong></dt>
  <dd><%= @hardware.length %>x<%= @hardware.width %>x<%= @hardware.height %> [cm]</dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @hardware.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @hardware.price %></dd>

  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><span class="label label-default"><%= @hardware.status %></span></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @hardware.note %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              hardwares_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hardware_path(@hardware), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hardware_path(@hardware),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
